<script src="/javascripts/sketch.js"></script>
<script src="/javascripts/doppler.js"></script>
<script src="/javascripts/theremin.js"></script>
<script>

    window.addEventListener('load', function() {
        $("#turnPilotOff").css('background-color', '#A57473');
        $("#thereminOff").css('background-color', '#A57473');
        $("#gainOff").css('background-color', '#A57473');

        window.doppler.init(function(bandwidth) {
                var threshold = 5;
                if (bandwidth.left > threshold || bandwidth.right > threshold) {
                    if(oscillator && pilotIsOn) oscillator.frequency.setTargetAtTime(calculateFrequency(bandwidth), context.currentTime, 0.01);
                }
            }); 
    });
</script>
